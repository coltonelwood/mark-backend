# =============================================================================
# MARK BACKEND - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# =============================================================================

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/mark_db?schema=public"

# Server
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Security
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-min-32-chars
JWT_REFRESH_EXPIRES_IN=30d

# Encryption (for sensitive data like EIN)
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=10

# CORS
CORS_ORIGIN=http://localhost:3001
ALLOWED_ORIGINS=http://localhost:3001,https://mark.io

# Admin
ADMIN_EMAIL=admin@mark.io
SUPER_ADMIN_EMAILS=founder@mark.io

# Identity Verification Provider (e.g., Persona, Jumio)
IDENTITY_PROVIDER=persona
IDENTITY_PROVIDER_API_KEY=
IDENTITY_PROVIDER_TEMPLATE_ID=

# File Storage (e.g., S3, IPFS)
STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=mark-documents

# IPFS (alternative storage)
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_PROJECT_ID=
IPFS_PROJECT_SECRET=

# Email (for notifications)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=
EMAIL_FROM=noreply@mark.io

# Blockchain (future MARK chain integration)
MARK_CHAIN_RPC=
MARK_CHAIN_ID=mark-mainnet-1
MULTISIG_ADDRESS=

# Security
CAPTCHA_SECRET_KEY=
CAPTCHA_SITE_KEY=

# Monitoring
SENTRY_DSN=
LOG_LEVEL=info

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379
